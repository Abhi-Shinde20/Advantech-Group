# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (for nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
FROM_EMAIL=noreply@advantech.com
TO_EMAIL=info@advantech.com

# Database Configuration (Neon PostgreSQL)
# For Netlify Neon extension, use the connection string from your Neon dashboard
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@ep-example-12345.us-east-1.aws.neon.tech/advantech?sslmode=require

# Alternative: Local PostgreSQL (for development)
# DATABASE_URL=postgresql://username:password@localhost:5432/advantech

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log